<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTextView">
        <attr name="app_font" format="enum">
            <enum name="regular" value="1"/>
            <enum name="light" value="2"/>
            <enum name="bold" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="AppButtonView">
        <attr name="app_button_style" format="enum">
            <enum name="style_primary" value="1"/>
            <enum name="style_default" value="2"/>
        </attr>

        <attr name="app_button_icon" format="reference"/>
        <attr name="app_button_text" format="string"/>
    </declare-styleable>
</resources>