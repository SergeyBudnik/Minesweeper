<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appButtonView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/layout_button_primary">

    <ImageView
        android:id="@+id/appButtonIconView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:tint="@color/item_default"/>

    <TextView
        android:id="@+id/appButtonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/item_default"/>

</RelativeLayout>