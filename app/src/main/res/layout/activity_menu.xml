<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/background_dark">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_bomb"
                android:tint="@color/item_default"/>

            <com.bdev.minesweeper.ui.views.common.AppTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Minesweeper"
                android:textColor="@color/item_default"
                android:textSize="16sp"
                app:app_font="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:padding="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bdev.minesweeper.ui.views.common.AppButtonView_
                android:id="@+id/newGameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:app_button_icon="@drawable/ic_bomb"
                app:app_button_text="New Game"
                app:app_button_style="style_primary"/>

            <com.bdev.minesweeper.ui.views.common.AppButtonView_
                android:id="@+id/continueGameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:app_button_icon="@drawable/ic_reload"
                app:app_button_text="Continue"
                app:app_button_style="style_default"/>

            <com.bdev.minesweeper.ui.views.common.AppButtonView_
                android:id="@+id/controlsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:app_button_icon="@drawable/ic_flag"
                app:app_button_text="Settings"
                app:app_button_style="style_default"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/themeView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="20dp"
                android:src="@drawable/ic_theme"
                android:background="@drawable/layout_button_default"/>

            <ImageView
                android:id="@+id/achievementsView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:padding="20dp"
                android:src="@drawable/ic_achievement"
                android:background="@drawable/layout_button_default"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>